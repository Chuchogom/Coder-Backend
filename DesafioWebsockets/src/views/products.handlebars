<h2>Products</h2>
<a href="/form-products">Create Product</a>
<hr>

<table border="1">
    <thead>
        <tr>
            <td>ID</td>
            <td>Title</td>
            <td>Description</td>
            <td>Price</td>
            <td>Thumbnail</td>
            <td>Code</td>
            <td>Stock</td>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.title}}</td>
                <td>{{this.description}}</td>
                <td>{{this.price}}</td>
                <td>{{this.thumbnail}}</td>
                <td>{{this.code}}</td>
                <td>{{this.stock}}</td>
            </tr>
        {{/each}}
    </tbody>
</table>